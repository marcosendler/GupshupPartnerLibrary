# =============================================================================
# GUPSHUP PARTNER API CONFIGURATION
# =============================================================================

# Credenciais de Parceiro
# Obtenha estas credenciais no Portal de Parceiros do Gupshup
GUPSHUP_PARTNER_EMAIL=seu-email@exemplo.com
GUPSHUP_PARTNER_PASSWORD=sua-senha-segura

# URL Base da API (normalmente não precisa alterar)
GUPSHUP_PARTNER_BASE_URL=https://partner.gupshup.io

# Tempo de expiração do token em horas (padrão: 24)
GUPSHUP_PARTNER_TOKEN_EXPIRY=24

# =============================================================================
# APP PADRÃO (OPCIONAL)
# =============================================================================

# ID do app padrão a ser usado quando não especificado
GUPSHUP_DEFAULT_APP_ID=

# Nome do app padrão
GUPSHUP_DEFAULT_APP_NAME=

# =============================================================================
# CACHE
# =============================================================================

# Habilitar cache de tokens (recomendado: true)
GUPSHUP_CACHE_ENABLED=true

# Prefixo das chaves de cache
GUPSHUP_CACHE_PREFIX=gupshup_

# Tempo de vida do cache em segundos (padrão: 3600 = 1 hora)
GUPSHUP_CACHE_TTL=3600

# =============================================================================
# LOGGING
# =============================================================================

# Habilitar logs (útil para debug)
GUPSHUP_LOGGING_ENABLED=false

# Canal de log do Laravel a ser usado
GUPSHUP_LOG_CHANNEL=daily

# Nível de log (debug, info, warning, error)
GUPSHUP_LOG_LEVEL=info

# =============================================================================
# RETRY CONFIGURATION
# =============================================================================

# Habilitar retry automático em caso de falha
GUPSHUP_RETRY_ENABLED=true

# Número de tentativas em caso de falha
GUPSHUP_RETRY_TIMES=3

# Tempo de espera entre tentativas (em milissegundos)
GUPSHUP_RETRY_SLEEP=100

# =============================================================================
# TIMEOUT
# =============================================================================

# Timeout de conexão (em segundos)
GUPSHUP_CONNECTION_TIMEOUT=10

# Timeout de requisição (em segundos)
GUPSHUP_REQUEST_TIMEOUT=30

# =============================================================================
# EXEMPLOS DE CONFIGURAÇÃO POR AMBIENTE
# =============================================================================

# DESENVOLVIMENTO
# GUPSHUP_LOGGING_ENABLED=true
# GUPSHUP_LOG_LEVEL=debug
# GUPSHUP_CACHE_ENABLED=false

# PRODUÇÃO
# GUPSHUP_LOGGING_ENABLED=false
# GUPSHUP_LOG_LEVEL=error
# GUPSHUP_CACHE_ENABLED=true
# GUPSHUP_RETRY_ENABLED=true